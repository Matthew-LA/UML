<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/userInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome role!"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/buttonUpdateMyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update My Details" />

    <Button
        android:id="@+id/buttonUpdateChildDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Child's Details" />

    <Button
        android:id="@+id/buttonRegisterForReadingGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register for a Reading Group" />

    <Button
        android:id="@+id/buttonJoinMeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll in Meetings" />

    <Button
        android:id="@+id/buttonMeetMats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Meeting Materials" />

    <Button
        android:id="@+id/buttonUpdateUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update User Details" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="24dp" />

</LinearLayout>
